<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <LinearLayout
        android:id="@+id/swipe_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/swipe_btn"
            android:text="SWIPE"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:textColor="#121212"
            android:textSize="50sp" />


        <com.ebanx.swipebtn.SwipeButton
            android:id="@+id/swipe_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            app:button_background="@drawable/shape_button"
            app:button_bottom_padding="20dp"
            app:button_image_disabled="@android:drawable/ic_menu_crop"
            app:button_image_enabled="@android:drawable/checkbox_on_background"
            app:button_left_padding="20dp"
            app:button_right_padding="20dp"
            app:button_top_padding="20dp"
            app:inner_text="Swipe Left"
            app:inner_text_background="@drawable/shape_background"
            app:inner_text_bottom_padding="16dp"
            app:inner_text_color="#000"
            app:inner_text_size="18sp"
            app:inner_text_top_padding="16dp" />
    </LinearLayout>


</RelativeLayout>